{% trans_default_domain 'FOSUserBundle' %}
{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

{% block title %}Login{% endblock %}
 {% block stylesheets %} 
<link rel="stylesheet" href="{{asset('public/css/font-awesome.min.css')}}">
<link rel="stylesheet"  href="{{asset('public/css/log.css')}}" />
<script type="text/javascript"></script>
 {% endblock stylesheets %}
{% block body %}
<div class="col-sm-9 col-md-10 affix-content">
<div class="container">
	<section id="content">
		<h1>Se connecter</h1>
		<form  action="{{ path('fos_user_security_check') }}" method="post">
            {% if csrf_token %}
          <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
            {% endif %}
            
			
              <div class="wrapper">
				<i class="fa fa-user"></i>
				<input type="text" placeholder="Adresse mail" name="_username" value="{{ last_username }}" required="required"/>
			</div>
            <div class="wrapper">
				<i class="fa fa-lock"></i>
				<input type="password" placeholder="Mot de passe"   name="_password" required="required"/>
			</div> 
			
          
				 <input type="submit" id="_submit" name="_submit" value="S'identifier" />
			
			<div>
                <br/>
			
				<a href="{{ path('fos_user_resetting_request') }}" style="float:centre;">Mot de passe oubli√©?</a>
			</div>
		</form>
	</section>
</div>
{% endblock body %}

